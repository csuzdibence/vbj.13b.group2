@using Students.Model
@model List<Student>
@{
    string usedClassName = "info";
}

<a href="@Url.Action("Register")">Regisztrálj egy új diákot!</a>

<table>
    <thead>
    <th>Azonosító</th>
    <th>Vezetéknév</th>
    <th>Keresztnév</th>
    <th>Regisztráció dátuma</th>
    <th>Email cím</th>
        @* Csak akkor rakok egy headert a törlés számára, ha van egyáltalán elem *@
        @if (Model.Any())
        {
            <th>Törlés</th>
        }
    </thead>
    <tbody>
        @foreach (Student student in Model)
        {
            usedClassName = student.IsValid ? "success" : "danger";
            <tr>
                <td>@student.Id</td>
                <td class="text-@usedClassName">@student.LastName</td>
                <td class="text-@usedClassName">@student.FirstName</td>
                <td>@student.DateOfRegistry</td>
                <td>@student.EmailAddress</td>
                <td><a href="@Url.Action("Delete", new { id = student.Id })">Törlés</a></td>
            </tr>
        }
    </tbody>
</table>
